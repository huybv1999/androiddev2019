        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/control_highlight</item>
        <item name="textcolor">@color/text_color</item>
        <item name="MessColor">@color/mess_color</item>
        <item name="android:textColorSecondary">@color/mess_color</item>
        <item name="android:textColorPrimary">@color/mess_color</item>
        <item name="android:windowBackground">@color/window_background</item>
